<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_report_addition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/closeWhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/additionToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarBack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/additionToolbar"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/White"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_bottom_line"
                android:paddingBottom="10dp"
                android:text="ÜRETİM BİLGİLERİ"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="SİPARİŞ KODU"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewSiparisKodu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="aaaa"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="STOK ADI"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewStokAdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="aaaa"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="MAKİNE"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/makineAdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="aaasssdddd"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="İŞLEM"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/islemAdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="aaasssdddd"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="PLANLANAN MİKTAR"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewPLMIKTAR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="50"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="ÜRETİLEN MİKTAR"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewUretilenMiktar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="15dp"
            android:background="@color/White"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_bottom_line"
                android:paddingBottom="10dp"
                android:text="VARDİYA RAPORU"
                android:textColor="#000000"
                android:textSize="18sp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="VARDİYA TARİHİ"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="0.86"
                            android:background="@color/closeWhite"
                            android:clickable="false"
                            android:focusable="false"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/dateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.04"
                            android:minHeight="47dp"
                            android:minWidth="50dip"
                            android:text="Seç" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="15sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="VARDİYA"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/vardiya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#efefef"
                        android:entries="@array/spinnerVardiya"
                        android:padding="7sp"
                        android:theme="@style/spinnerTheme"
                        android:popupBackground="#efefef"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="BESLENEN MİKTAR"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtBeslenen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:clickable="false"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="ÜRETİLEN MİKTAR"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtUretilen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:clickable="false"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="FİRE MİKTARI"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtFireMiktari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:clickable="false"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="FİRE NEDENİ"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtFireNedeni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:clickable="false"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="ISKARTA MİKTARI"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtIskartaMiktari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:clickable="false"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="ISKARTA NEDENİ"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtIskartaNedeni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:clickable="false"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textColor="#000000"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="OPERATÖR SEÇİMİ"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ListView
                        android:id="@+id/secilenOperatorler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fastScrollAlwaysVisible="false"
                        android:fastScrollEnabled="false"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" />

                    <Button
                        android:id="@+id/btnOperator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:background="@color/closeWhite"
                        android:padding="5dp"
                        android:paddingTop="5dp"
                        android:text="OPERATOR SEÇ"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:layout_marginTop="20sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="AÇIKLAMA"
                        android:textColor="@color/toolbarBack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtAciklama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/closeWhite"
                        android:paddingBottom="7sp"
                        android:paddingLeft="5sp"
                        android:paddingTop="7sp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|center"
                        android:textSize="20sp"
                        android:inputType="textMultiLine" />

                    <Button
                        android:id="@+id/btnKaydet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22sp"
                        android:background="@color/closeWhite"
                        android:padding="5dp"
                        android:paddingTop="5dp"
                        android:text="RAPORU KAYDET"
                        android:textColor="#000000" />


                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
